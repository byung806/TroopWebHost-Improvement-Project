{
    "manifest_version": 3,
    "name": "TroopWebHost Improvement Extension",
    "version": "0.1",
    "author": "CBT Software",
    "action": {},
    "description": "Streamlines the functions of TroopWebHost",
    "permissions": [
        "scripting",
        "webRequest"
    ],
    "host_permissions": [
        "https://www.troopwebhost.org/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.troopwebhost.org/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}